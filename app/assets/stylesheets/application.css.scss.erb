$site-orange : #f6861f;
$fadedblack: #202020;

body {
  font-family: trebuchet, sans-serif;
  font-size: 18px;
  height: 100%;
  margin: 0;
  position: relative;
  transition: background-color .5s ease;
}

body p {
  word-wrap: break-word;
}

.loading {
  background-color: $fadedblack;
}

.loading img {
  -webkit-box-reflect:
    below
    0px
    -webkit-gradient(
      linear,
      left top,
      left bottom,
      from(transparent),
      color-stop(50%, transparent),
      to(rgba(255, 255, 255, 0.2))
    );
}

.stargate-loading {
  width: 600px;
  margin: 0px auto;
}

.clearfix:after {
  clear: both;
  content: '';
  display: block;
  visibility: hidden;
}

// Header/navbar
#main-header {
  background-color: $fadedblack;
  color: #fff;
  padding: 0;
  position: relative;
  width: 100%;
}

#navbar {
  margin: 0 auto;
  max-width: 1024px;
  min-width: 1024px;
  padding: 0 20px;
  position: relative;
  width: 100%;
}

.navbar-item {
  position: relative;
  padding: 0;
}

.navbar-item > a {
  margin: 0;
  padding: 0;
  font-size: 14px;
}

.nav-left > li > a.current-page {
  font-weight: 600;
  color: #fff;
}

#logo {
  width: 450px;
  margin: 7px 0;
}

.nav-left {
  float: left;
  font-size: 16px;
  font-weight: 400;
}

.nav-right {
  float: right;
  margin-right: 10px;
}

ul {
  margin: 10px;
  padding: 0;
}

li {
  display: block;
  float: left;
  padding: 12px 10px 8px;
}

a, a:hover, a:visited, img {
  display: block;
  color: #ccc;
  text-decoration: none;
  margin: 0;
  padding: 0;
}

// Main div
#main {
  position: relative;
  margin: 0 auto;
  clear: both;
  width: 1024px;
  padding: 30px 20px;
}

//// Search Forms

.search-form-title {
  margin: 40px auto 10px;
  padding: 0;
  font-weight: 300;
}

// typeahead
.planet-input {
  width: 325px;
}

.twitter-typeahead {
  display: block !important;
  float: left !important;
}

.tt-dropdown-menu {
  top: 120% !important;
  box-shadow: 5px 5px 5px #ccc;
  border-radius: 5px;
  width: 95%;
  border: 1px solid lightgray;
  background: rgba(255, 255, 255, 1);
  padding: 5px;
  margin: 1px;
}

.tt-hint {
  color: gray;
}

.tt-cursor {
  color: $site-orange;
}

.tt-dataset-dataset {
}

.inputs-container {
  clear: both;
}

.search-input {
  height: 40px;
  padding-left: 5px;
  margin-right: 5px;
}

.num-input {
  width: 30px;
}

// dates
select.flex-dates-select {
  display: none;
  float: left;
  -webkit-appearance: none;
  height: 46px;
  width: 250px;
  padding: 0 5px;
  background: url(<%= image_path 'downward_triangle.png' %>) no-repeat right;
  background-size: contain;
}

.btn {
  background-color: $site-orange;
  border-radius: 2px;
  border: none;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  height: 46px;
  padding: 1px;
  margin: 2px;
  position: relative;
  top: -1px;
  width: 130px;
}

.btn-small {
  height: 25px;
  font-size: 14px;
  font-weight: 400;
}

.datepicker-container {
  margin: 10px 0;
}

input.datepicker {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 10px;
  position: relative;
  width: 150px;
}

.date-inputs {
  clear: both;
  margin-top: 20px;
}

.date-input > * {
  display: block;
  float: left;
}

// tabs
.tabs-list {
  margin: 0;
  padding: 0;
}
.tabs-list > li {
  float: left;
  margin: 0;
  padding-left: 0;
  padding-right: 20px;
  color: gray;
  font-size: 16px;
  font-weight: 400;
}

.tabs-list li:hover {
  text-decoration: underline gray;
  cursor: pointer;
}

.tabs-list > li.selected {
  color: black;
  font-weight: 600;
}


// Trip Results Index
.trip-results > *:not(img) {
  width: 100%;
  margin: 0;
  border-bottom: none;
}

// Trip Results Details
.trip-details-list {
  border: 1px solid lightgray;
  margin: 0;
  width: 100%;
}

.arrow {
  height: 7px;
  width: 20px;
  margin: 5px;
  background-size: contain !important;
}

.double-arrow {
  background: url(<%= image_path 'double-arrow.png' %>) no-repeat left;
}

.right-arrow {
  background: url(<%= image_path 'right-arrow.png' %>);
  width: 15px;
}

.large-arrow {
  height: 17px;
  width: 50px;
}

.details-item .arrow {
  margin: 10px;
}

.trip-details-list > li {
  display: block;
  float: left;
}

.route {
  font-size: 32px;
  margin-top:10px;
}

.trip-details-list > li > * {
  display: block;
  float: left;
}

.trip-details-list p {
  margin: 0 5px;
}

.trip-details-list li:not(:last-child) {
  border-right: 1px solid lightgray;
}

.details-item {
  margin: 10px 5px;
}

.details-caption {
  font-size: 14px;
}

li.change-btn {
  float: right;
  margin: 0;
}

// Trip Results List
.trips-list {
  margin: 0;
}

.trips-list > li {
  border: 1px solid lightgray;
  border-top: none;
  width: 100%;
  margin: 0;
  padding: 0;
}

.trips-list * {
  display: block;
  float: left;
}

.legs p {
  margin: 0px 5px;
}

.trips-list li {
  clear: left;
}

.select-btn {
  margin: 25px 10px;
}

// Trip Leg
.leg-item {
  margin-left: 10px;
}

.time {
  width: 150px;
}

.origin {
  width: 150px;
}

.destination {
  width: 150px;
}

.space {
  color: #6ab90f;
  font-size: 14px;
  margin-left: 30px;
}

// Reservation View
#modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  -webkit-transition: background .5s ease;
}

#modal.inactive {
  display: none;
}

#modal.active {
  background: rgba(0, 0, 0, 0.6);
  display: block;
}

.tripRes {
  width: 700px;
  max-height: 600px;
  overflow: scroll;
  margin: 0 auto;
  display: block;
  position: relative;
  z-index: 11;
  top: -100%;
  background: #fff;
  padding: 10px;
  transition: top .5s ease;
}

.tripRes.active {
  top: 75px;
}

.tripRes * {
   margin: 2px;
   padding: 0;
}

.planet-details, .trip-details {
  font-size: 14px;
}

.planet-detail-item {
  display: block;
  float: left;
}

.description {
  clear: left;
}

.tripRes btn {
  display: block;
  margin: 10px auto;
}

.res-title {
  width: 100%
}

.res-title-planet {
  width: 40%
}

.res-title-planet .planet-name {
  font-size: 24px;
  font-weight: 700;
}

.left {
  float: left;
}

.right {
  float: right;
}

.alias, .date-time, .galaxy {
  clear: both;
}

.date-time * {
  margin: 5px auto;
}

.alias, .date-time {
  font-size: 14px;
}

.clearance {
  color: $site-orange
}

// Reservation Form
.res-form label,
.res-form input,
.res-form button,
.res-form h3,
.res-form h4,
.res-form p {
  display: block;
  float: left;
  font-size: 16px;
}

.res-form h3 {
  font-size: 18px;
}

.res-form p {
  margin-left: 35%;
  font-size: 14px;
}

.res-form label {
  clear: left;
  width: 33%;
  text-align: right;
}

.res-form input {
  width: 57%;
  font-size: 14px;
  color: $site-orange;
  font-weight: 500;
}
