$site-orange : #f6861f;
$fadedblack: #202020;

@mixin vertical-center {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(50%);
  -ms-transform: translateY(50%);
  transform: translateY(50%);
}

body {
  font-family: trebuchet, sans-serif;
  font-size: 18px;
  height: 100%;
  margin: 0;
  position: relative;
  transition: background-color .1s ease;
}

.loading {
  background-color: $fadedblack;
}

.clearfix:after {
  clear: both;
  content: '';
  display: block;
  visibility: hidden;
}

#main-header {
  background-color: $fadedblack;
  color: #fff;
  padding: 0;
  position: relative;
  width: 100%;
}

#navbar {
  margin: 0 auto;
  max-width: 1024px;
  min-width: 1024px;
  padding: 0 20px;
  position: relative;
  width: 100%;
}

.navbar-item {
  position: relative;
  padding: 0;
}

.navbar-item > a {
  margin: 0;
  padding: 0;
  font-size: 14px;
}

#logo {
  width: 450px;
  margin: 7px 0;
}

.nav-left {
  float: left;
  font-size: 16px;
  font-weight: 400;
}

.nav-right {
  float: right;
  margin-right: 10px;
}

ul {
  margin: 10px;
  padding: 0;
}

li {
  display: block;
  float: left;
  padding: 12px 10px 8px;
}

a, a:hover, a:visited, img {
  display: block;
  color: #ccc;
  text-decoration: none;
  margin: 0;
  padding: 0;
}

// Main div
#main {
  position: relative;
  margin: 0 auto;
  clear: both;
  width: 1024px;
  padding: 30px 20px;
}

// Search Forms
.main-inputs {
  clear: both;
}

.search-input {
  height: 40px;
  padding-left: 5px;
  margin-right: 5px;
}

.planet-input {
  width: 325px;
}

.num-input {
  width: 30px;
}

.search-form-title {
  margin: 40px auto 10px;
  padding: 0;
  font-weight: 300;
}

.btn {
  background-color: $site-orange;
  border: 2px solid $site-orange;
  border-radius: 2px;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  height: 46px;
  padding: 1px;
  margin: 0;
  position: relative;
  width: 130px;
}

.datepicker-container {
  margin: 10px 0;
}

input.datepicker {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 10px;
  position: relative;
  width: 150px;
}

.date-inputs {
  clear: left;
}

.datepicker-container > label {
  display: inline-block;
  width: 100px;
}

.tabs-list {
  margin: 0;
  padding: 0;
}
.tabs-list > li {
  float: left;
  margin: 0;
  padding-left: 0;
  padding-right: 20px;
  color: gray;
  font-size: 16px;
  font-weight: 400;
}

.tabs-list:hover {
  text-decoration: underline gray;
  cursor: pointer;
}

.tabs-list > li.selected {
  color: black;
  font-weight: 600;
}

.radio-btns {
  margin: 10px 0;
}

.roundtrip {
  display: inline-block;
  position: relative;
  width: 30px;
}

.stargate-shimmer {
  width: 50%;
  margin: 0px auto;
}

// Trip Results Index
.trip-results {
}

// Trip Results Details
.trip-details-list {
  border: 1px solid lightgray;
  margin: 0;
}

.arrow {
  height: 7px;
  margin: 5px;
}

.double-arrow {
  background: url(<%= image_path 'double-arrow.png' %>);
  width: 20px;
}

.right-arrow {
  background: url(<%= image_path 'right-arrow.png' %>);
  width: 15px;
}

.trip-details-list > li {
  display: block;
  float: left;
}

.trip-details-list > li > * {
  display: block;
  float: left;
}

.trip-details-list p {
  margin: 0 5px;
}

// Trip Results List

.trips-list * {
  display: block;
  float: left;
}

.legs p {
  margin: 0px 5px;
}

.trips-list li {
  clear: left;
}

.select-btn {
  @include vertical-center;
  margin: 0px 20px;
}

li.change-btn {
  float: right;
}
