$site-orange : #f6861f;
$fadedblack: #202020;

@import url(http://weloveiconfonts.com/api/?family=entypo);

/* entypo */
[class*="entypo-"]:before {
  font-family: 'entypo', sans-serif;
}

body {
  font-family: trebuchet, sans-serif;
  font-size: 18px;
  height: 100%;
  margin: 0;
  position: relative;
  transition: background-color .1s ease;
}

.loading {
  background-color: $fadedblack;
}

.stargate-shimmer {
  width: 50%;
  margin: 0px auto;
}

.clearfix:after {
  clear: both;
  content: '';
  display: block;
  visibility: hidden;
}

// Header/navbar
#main-header {
  background-color: $fadedblack;
  color: #fff;
  padding: 0;
  position: relative;
  width: 100%;
}

#navbar {
  margin: 0 auto;
  max-width: 1024px;
  min-width: 1024px;
  padding: 0 20px;
  position: relative;
  width: 100%;
}

.navbar-item {
  position: relative;
  padding: 0;
}

.navbar-item > a {
  margin: 0;
  padding: 0;
  font-size: 14px;
}

#logo {
  width: 450px;
  margin: 7px 0;
}

.nav-left {
  float: left;
  font-size: 16px;
  font-weight: 400;
}

.nav-right {
  float: right;
  margin-right: 10px;
}

ul {
  margin: 10px;
  padding: 0;
}

li {
  display: block;
  float: left;
  padding: 12px 10px 8px;
}

a, a:hover, a:visited, img {
  display: block;
  color: #ccc;
  text-decoration: none;
  margin: 0;
  padding: 0;
}

// Main div
#main {
  position: relative;
  margin: 0 auto;
  clear: both;
  width: 1024px;
  padding: 30px 20px;
}

// Search Forms
.inputs-container {
  clear: both;
}

.search-input {
  height: 40px;
  padding-left: 5px;
  margin-right: 5px;
}

.planet-input,
.ui-autocomplete,
.ui-autocomplete > li {
  width: 325px;
}

.ui-autocomplete,
.ui-autcomplete > li {
  height: 25px;
  font-size: 16px;
}

.ui_autocomplete > li {
  display: block;
  float: left;
}

.num-input {
  width: 30px;
}

select.flex-dates {
  display: none;
  float: left;
  -webkit-appearance: none;
  height: 46px;
  width: 250px;
  padding: 0 5px;
  background: url(<%= image_path 'downward_triangle.png' %>) no-repeat right;
  background-size: contain;

}

.search-form-title {
  margin: 40px auto 10px;
  padding: 0;
  font-weight: 300;
}

.btn {
  background-color: $site-orange;
  border: 2px solid $site-orange;
  border-radius: 2px;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  height: 46px;
  padding: 1px;
  margin: 0;
  position: relative;
  width: 130px;
}

.datepicker-container {
  margin: 10px 0;
}

input.datepicker {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 10px;
  position: relative;
  width: 150px;
}

.date-inputs {
  clear: both;
  margin-top: 20px;
}

.date-input > * {
  display: block;
  float: left;
}

.tabs-list {
  margin: 0;
  padding: 0;
}
.tabs-list > li {
  float: left;
  margin: 0;
  padding-left: 0;
  padding-right: 20px;
  color: gray;
  font-size: 16px;
  font-weight: 400;
}

.tabs-list li:hover {
  text-decoration: underline gray;
  cursor: pointer;
}

.tabs-list > li.selected {
  color: black;
  font-weight: 600;
}


// Trip Results Index
.trip-results {
}

// Trip Results Details
.trip-details-list {
  border: 1px solid lightgray;
  margin: 0;
}

.arrow {
  height: 7px;
  margin: 5px;
  margin: 10px;
}

.double-arrow {
  background: url(<%= image_path 'double-arrow.png' %>);
  width: 20px;
}

.right-arrow {
  background: url(<%= image_path 'right-arrow.png' %>);
  width: 15px;
}

.trip-details-list > li {
  display: block;
  float: left;
}

.route {
  font-size: 32px;
  margin-top:10px;
}

.trip-details-list > li > * {
  display: block;
  float: left;
}

.trip-details-list p {
  margin: 0 5px;
}

.trip-details-list li:not(:last-child) {
  border-right: 1px solid gray;
}

.details-item {
  margin: 10px 5px;
}

.details-caption {
  font-size: 14px;
}

li.change-btn {
  float: right;
  margin: 0;
}

// Trip Results List

.trips-list * {
  display: block;
  float: left;
}

.legs p {
  margin: 0px 5px;
}

.trips-list li {
  clear: left;
}
