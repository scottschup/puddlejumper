<h1 class=search-form-title>Gate Travel</h1>
<form class=search>
  <input class=roundtrip-value
    type=hidden
    name=trip[roundtrip]
    value=true>

  <div class="clearfix trip-type-tabs">
    <ul class=tabs-list>
      <li class=selected>Round-trip</li>
      <li>One-way</li>
    </ul>
  </div>
  <div class=clearfix>
    <input type="text"
           class="search-input planet-input typeahead"
           id=from-box
           name="trip[origin]"
           placeholder="From: Earth, Abydos, etc."
           value="">

    <input type="text"
           id=to-box
           class="search-input planet-input typeahead"
           name="trip[destination]"
           placeholder="To: Chulak, P3X888, etc."
           value="">

    <input type="text"
           id=num-box
           class="search-input num-input"
           name="trip[num_travelers]"
           value="1">

    <button class=btn id=trip-search-submit>Search</button>
    <button class=btn id=surprise-me-btn>Surprise Me!</button>
  </div>

  <div class="date-inputs clearfix">
    <input class=flex-dates type=hidden name=trip[flex_dates] value=false>
    <div class="clearfix date-tabs">
      <ul class=tabs-list>
        <li class="selected">Exact Dates</li>
        <li>Flexible Dates</li>
      </ul>
    </div>
    <div class="date-input depart clearfix">
      <p>Depart</p>
      <input type=text class="search-input datepicker"
        id=depart-date name=trip[depart]
        value="<%= moment().format("ddd M/D") %>">
      <select class="search-input flex-dates-select" name=trip[depart_range]>
        <option value=0>only this day</option>
        <option value=1>and the following day</option>
        <option value=2>and the next two days</option>
        <option value=3>and the next three days</option>
        <option value=4>and the next four days</option>
        <option value=5>and the next five days</option>
        <option value=6>and the next six days</option>
      </select>
    </div>

    <div class="date-input arrive clearfix">
      <p>Return</p>
      <input type=text class="search-input datepicker"
        id=arrive-date name=trip[arrive]
        value="<%= moment().add(1, 'day').format("ddd M/D") %>">
      <select class="search-input flex-dates-select" name=trip[arrive_range]>
        <option value=0>only this day</option>
        <option value=1>and the following day</option>
        <option value=2>and the next two days</option>
        <option value=3>and the next three days</option>
        <option value=4>and the next four days</option>
        <option value=5>and the next five days</option>
        <option value=6>and the next six days</option>
      </select>
    </div>
  </div>
</form>

<script>
$(function () {
  $('.datepicker').datepicker({
    dateFormat: 'D m/d'
  });
});
</script>
